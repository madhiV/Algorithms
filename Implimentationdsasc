<!DOCTYPE html>
<html lang="en">
<head>
    <script type='text/javascript'>
    document.writeln("<h1>Hello world</h1>");
    function func()
    {
        var name=document.t.name;
        document.write("The name is : "+name);
    }
    function display()
    {
        alert("Just simply opneing this alert");
        var d=new Date();
        var hour=d.getHours();
        var n1=window.prompt("Hey there Enter your first number : ",10);
        var n2=window.prompt("Hey there Enter your second number : ",50);
        confirm("Are you sure to proceed ?");
        document.writeln("<h1>The sum of the entered 2 integers is : </h1>"+(parseInt(n1)+parseInt(n2))+"The time is "+hour);
    }
    </script>
</head>
<body onload="display()">
    <form onsubmit="return func()" name="t">
        <label for="name">Enter the name</label>
        <input name="name">
        <input type="submit" value="Enter">
    </form>
</body>
</html>
